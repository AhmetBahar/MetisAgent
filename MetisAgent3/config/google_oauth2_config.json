{
  "_note": "Replace these placeholder values with your actual Google OAuth2 credentials",
  "_instructions": [
    "1. Go to https://console.cloud.google.com/",
    "2. Create a new project or select existing one",
    "3. Enable Gmail API, Calendar API, Drive API",
    "4. Go to 'Credentials' -> 'Create Credentials' -> 'OAuth 2.0 Client ID'",
    "5. Select 'Web application'",
    "6. Add authorized redirect URI: http://localhost:5001/oauth2/google/callback",
    "7. Copy Client ID and Client Secret here"
  ],
  "client_id": "${GOOGLE_CLIENT_ID_PLACEHOLDER}",
  "client_secret": "${GOOGLE_CLIENT_SECRET_PLACEHOLDER}",
  "redirect_uri": "http://localhost:5001/oauth2/google/callback",
  "scopes": [
    "https://www.googleapis.com/auth/gmail.readonly",
    "https://www.googleapis.com/auth/gmail.send",
    "https://www.googleapis.com/auth/calendar",
    "https://www.googleapis.com/auth/drive"
  ],
  "enabled": true
}